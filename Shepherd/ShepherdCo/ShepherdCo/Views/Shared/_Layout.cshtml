<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a class="modal-link" href="/Home/Balance">My balance: <span class="balance"></span> €</a></li>
                <li>@Html.ActionLink("View Orders", "ViewOrders", "Home", new {@class = "modal-link"})</li>
                <li>@Html.ActionLink("Re-Load Stocks", "ReloadStocks", "Home", new { @class = "modal-link" })</li>
            </ul>
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
</div>
<div class="logo">
    <img src="~/Images/logo.png"/><br/>
    SHEPHERD AND COMPANY
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
<script src="~/Scripts/main.js"></script>
<div id="modal-container" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-content">
    </div>
</div>
</body>
</html>
