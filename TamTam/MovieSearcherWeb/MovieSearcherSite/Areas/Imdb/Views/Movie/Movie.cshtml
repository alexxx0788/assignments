@model IEnumerable<MovieSearcherApi.MovieRepo.Movie>
@foreach (MovieSearcherApi.MovieRepo.Movie m in Model)
{
    <div class="movie">
    <div class="poster"><img src="@m.Poster" /></div>
        <div class="movie-content">
            <a class="movie-title" href="@m.UrlImdb" target="_blank">@m.Title (@m.Year)</a>
            <p>@m.Plot</p>
        </div>
    </div>
}
